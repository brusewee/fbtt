<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg_true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingTop="15dp"

        >
        <ImageView
            android:id="@+id/iv_my_shezhi"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/shezhi_my"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="17sp"
            />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <fbtt.com.fbtt.view.CircleImageView
            android:id="@+id/my_circle_view"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:src="@drawable/denglu_image_my"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/gray"
            />
        <TextView
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默認登錄"
            android:textColor="#a0a0a0"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingBottom="28dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/my_my_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xiaoxi_my"/>
            <TextView
                android:layout_marginTop="@dimen/my_yemian_xiaoxi_jianju"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/my_yemian_zit"

                android:text="我的消息"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:background="@color/my_yemian_zit"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/my_my_shouchang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shouchang_my"/>
            <TextView
                android:layout_marginTop="@dimen/my_yemian_xiaoxi_jianju"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/my_yemian_zit"

                android:text="我的收藏"/>


        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:background="@color/my_yemian_zit"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/my_my_dingyue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dingyue_my"/>
            <TextView
                android:layout_marginTop="@dimen/my_yemian_xiaoxi_jianju"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/my_yemian_zit"
                android:text="我的訂閱"/>


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_my_huodong"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="@dimen/my_huo_fan_distance"
            android:layout_marginBottom="@dimen/my_huo_fan_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <ImageView

                android:layout_marginLeft="12dp"
                android:id="@+id/iv_my_huodong"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/my_huodong"/>
            <TextView
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:textSize="14sp"
                android:text="活動"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/new_my"/>

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xiayibu_my"/>

        </RelativeLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <View
            android:background="#E8E8E8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_my_yejian"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="@dimen/my_huo_fan_distance"
            android:layout_marginBottom="@dimen/my_huo_fan_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <ImageView

                android:layout_marginLeft="12dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/yejian_my"/>
            <TextView
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:textSize="14sp"
                android:text="夜间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xiayibu_my"/>

        </RelativeLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <View
            android:background="#E8E8E8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_my_shenliuliang"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="@dimen/my_huo_fan_distance"
            android:layout_marginBottom="@dimen/my_huo_fan_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <ImageView

                android:layout_marginLeft="12dp"

                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/shenliuliang"/>
            <TextView
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:textSize="14sp"
                android:text="省流量模式"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xiayibu_my"/>

        </RelativeLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <View
            android:background="#E8E8E8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/my_zhouwei_deren"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="@dimen/my_huo_fan_distance"
            android:layout_marginBottom="@dimen/my_huo_fan_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <ImageView

                android:layout_marginLeft="12dp"

                android:layout_width="20dp"
                android:layout_height="18dp"
                android:src="@drawable/zhouwei_my"/>
            <TextView
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:text="周围的人"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xiayibu_my"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <View
                android:background="#E8E8E8"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_my_fangui"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="@dimen/my_huo_fan_distance"
            android:layout_marginBottom="@dimen/my_huo_fan_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <ImageView

                android:layout_marginLeft="12dp"

                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/fankui_my"/>
            <TextView
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:textSize="14sp"
                android:text="反馈"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xiayibu_my"/>

        </RelativeLayout>



    </LinearLayout>


    </LinearLayout>
    </ScrollView>


</LinearLayout>
